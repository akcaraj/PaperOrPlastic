<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="49dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Button"
            android:id="@+id/bListItem"
            style="@style/Base.Widget.AppCompat.ActionBar.TabText"
            android:elegantTextHeight="false"
            android:maxWidth="200dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true" />

        <Spinner
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id="@+id/itemQuantitySpinner"
            android:layout_gravity="right"
            android:spinnerMode="dialog"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Qty"
            android:id="@+id/quantityText"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/itemQuantitySpinner"
            android:layout_toStartOf="@+id/itemQuantitySpinner" />

        <Button
            android:id="@+id/bDelete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:layout_weight=".5"
            android:onClick="deleteItem"
            android:visibility="invisible" />
    </RelativeLayout>

</LinearLayout>